@model WorldDomination.Web.Mvc.ErrorViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Error</title>
</head>
<body>
    <h2>
        Sorry, an error occurred while processing your request. (HTTP 401 NOT AUTHORIZED).
    </h2>
    <br/>
    <br/>
    @if (Model == null || Model.Exception == null)
    {
        <p>There's no exception provided.</p>
    }
    else
    {
        <p>
            <ul>
                <li>Exception: @Model.Exception.Message</li>
                <li>Source: @Model.Exception.Source</li>
            </ul>    

        </p>
    }
    
    <hr/>
    
    <img src="/Content/@(DateTime.Now.Second % 2 == 0 ? "PwndBaby.jpg" : "WorkPwnd.jpg")" alt="We've all been pwnd! Sad Face :("/>
</body>
</html>